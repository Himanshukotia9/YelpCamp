<% layout('layouts/boilerplate') %> 
<div class="row">
    <div class="col-6 offset-3">
        <div class="card mb-5">
            <img src="<%= campground.image %> " class="card-img-top" alt="...">
            <div class="card-body">
              <h4 class="card-title"><%= campground.title %> </h4>
              <h6 class="card-title text-muted">~ <%= campground.location %></h6>
              <p class="card-text"><%= campground.description %></p>
            </div>
            <ul class="list-group list-group-flush">
              <li class="list-group-item"><b>Price:</b> $ <%= campground.price %></li>
            </ul>
            <div class="card-body d-flex justify-content-between">
              <a href="/campgrounds/<%=campground._id%>/edit" class="card-link btn btn-warning">Edit Campground</a>
              <form action="/campgrounds/<%=campground._id%>?_method=DELETE" method="post">
                <button class="btn btn-danger">Delete Product</button>
            </form>
            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item "><a href="/campgrounds" class="btn btn-primary">Goto All Campgrounds</a></li>
            </ul>
          </div>
    </div>
</div>
